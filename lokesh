      <div class="dropdown-content">
        <a href="#home" onclick="showSection('home')">Home</a>
        <a href="#coding" onclick="showSection('coding')">Coding</a>
        <a href="#music" onclick="showSection('music')">Music</a>
        <a href="#browser" onclick="showSection('browser')">Browser</a>
        <a href="#notes" onclick="showSection('notes')">Notes</a>
        <a href="#files" onclick="showSection('files')">Files</a>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="main-content">
    <div id="home" class="content-section">
      <h1>Welcome to the All-In-One App</h1>
      <p>Select an option from the menu to get started!</p>
    </div>
    
    <div id="coding" class="content-section" style="display: none;">
      <h1>Coding</h1>
      <textarea rows="10" placeholder="Write your code here..."></textarea>
      <button class="button" onclick="runCode()">Run Code</button>
    </div>

    <div id="music" class="content-section" style="display: none;">
      <h1>Music Player</h1>
      <p>Music functionality goes here (e.g., play, pause, next).</p>
    </div>

    <div id="browser" class="content-section" style="display: none;">
      <h1>Browser</h1>
      <input type="text" placeholder="Enter URL" id="browserInput">
      <button class="button" onclick="openBrowser()">Go</button>
      <iframe id="browserFrame" style="width: 100%; height: 300px; margin-top: 10px; display: none; border: 1px solid #ddd;"></iframe>
    </div>

    <div id="notes" class="content-section" style="display: none;">
      <h1>Notes</h1>
